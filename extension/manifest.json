{
  "manifest_version": 3,
  "name": "AI Chatbot Panel",
  "version": "1.0",
  "description": "A sliding panel for AI interactions.",
  "permissions": [
    "sidePanel",
    "tabs"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "sw.js"
  },
  "action": {
    "default_title": "Open AI Copilot Panel"
  },
  "host_permissions": [
      "http://localhost/*",
      "https://*/*"
    ]
  // "icons": {
  //   "16": "assets/icon.png",
  //   "48": "assets/icon.png",
  //   "128": "assets/icon.png"
  // }
}
