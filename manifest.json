{
    "manifest_version": 3,
    "name": "AI Copilot Panel",
    "version": "1.0",
    "description": "A sliding panel for AI interactions.",
    "permissions": [
      "sidePanel"
      // "scripting",
      // "activeTab"
    ],
    "side_panel": {
      "default_path": "index.html"
    },
    "background": {
      "service_worker": "sw.js"
    },
    "action": {
      "default_title": "Open AI Copilot Panel"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
      ]
  }
  
  
